{
    "alias": "i",
    "scenes": {
        "generate": {
            "properties": {
                "name": {
                    "type": "input",
                    "message": "The name of the interceptor",
                    "cliType": "argument"
                },
                "moduleName": {
                    "type": "input",
                    "message": "The name of module who manages this interceptor",
                    "default": "$context$name",
                    "cliType": "argument"
                },
                "skipExport": {
                    "type": "confirm",
                    "message": "Skip exporting this interceptor from module",
                    "default": false,
                    "cliType": "option"
                }
            },
            "required": [
                "name"
            ]
        },
        "update": {
            "properties": {
                "accessibility": {
                    "type": "input",
                    "message": "The accessibility of the interceptor in target interceptor's constructor",
                    "cliType": "option",
                    "default": "private"
                },
                "skipReadonly": {
                    "type": "confirm",
                    "message": "Prevent read-only parameter property",
                    "cliType": "option",
                    "default": false
                }
            }
        }
    }
}
